@model UserSessionManagment.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DemoView</title>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
</head>
    
    
<body>
    <div class="LoginDiv" style="margin:auto; border:2px solid grey; width:400px; height:250px ;background-color: lightgrey;">
        <h2 style="font-family: Lucida Console, Courier, monospace">Login</h2>
        @using (Html.BeginForm("Index" ,"UserLogin",FormMethod.Post)) 
        {
            @Html.ValidationSummary(true)
        <div class="editor-label" style="font-family: Arial, Helvetica, sans-serif; font-size:20px">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field" >
            @Html.EditorFor(model => model.Name, new { style="padding: 12px 20px;  margin: 8px 0;box-sizing: border-box; border: none;background-color: #3CBC8D;color: white"} )
            @Html.ValidationMessageFor(model => model.Name)
           
        </div>

        <div class="editor-label" style="font-family: Arial, Helvetica, sans-serif;font-size:20px">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password , "", new { @class = "error" })
        </div>

        <p>
            <input type="submit" value="LOGIN" style="float:right;border-radius:10px; background-color: blueviolet; border: none;color: white;padding: 20px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;cursor: pointer;"/>
        </p>
        }

 </div>
</body>
    
@*@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}*@

</html>




